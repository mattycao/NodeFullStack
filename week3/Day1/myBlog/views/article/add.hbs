<h1>Post An Article</h1>
{{#if error}}
    <div class="alert alert-danger col-md-10" role="alert">Error:&nbsp;{{error}}</div>
{{/if}}
<form action="/article/{{cmd}}" method="post" role="form" class="form-horizontal">
    <input type="hidden" name="_id" value="{{article._id}}"/>

    <div class="form-group">
        <label class="col-md-2 control-label" for="titleName">Title:</label>

        <div class="col-md-8">
            <input type="text" name="title" id="titleName" class="form-control" value="{{article.title}}"
                   placeholder="Please Enter the artitle title..."/>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="articleContent">Content:</label>

        <div class="col-md-8">
            <textarea rows="30" cols="100" name="content" id="articleContent" class="form-control"
                      placeholder="Please Enter the artitle content...">{{article.content}}</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>

</form>